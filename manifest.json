                                                                              "addon_parent"
                                                                          ],
                                                               "script":  "experiments/ncCalToolbar/parent.js",
                                                               "events":  [
                                                                              "startup"
                                                                          ],
                                                               "paths":  [
                                                                             [
                                                                                 "ncCalToolbar"
                                                                             ]
                                                                         ]
                                                           }
                                            }
                        },
    "icons":  {
                  "16":  "icons/app-16.png",
                  "32":  "icons/app-32.png",
                  "48":  "icons/app-48.png",
                  "96":  "icons/app-96.png"
              }
}
